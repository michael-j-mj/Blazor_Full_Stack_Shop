@page "/"

@inherits ProductsBase


@code {

}

@if (Products == null)
{
   <CircularProgress />
}
else
{
    <h3 class="mb-5"> Products</h3>
    var ProductCount = Products.Count();
    @if (ProductCount > 0)
    {

        const int itemsPerRow = 4;
        foreach (var pGroup in GetGroupByCategory()) {
       
                <h4>@GetCategoryName(pGroup)</h4>
                                 <div class="row mt-3">
                <DisplayProducts Products="@pGroup.Take(4)"></DisplayProducts>
            </div>
            <hr class="mb-3" />
        }      
    }
}
